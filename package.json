  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "canvas",
    "library",
    "typescript",
    "background"
  ],
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "lint": "eslint src"
